<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_vacinas"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/black"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Registro Vacinal"
        app:titleTextColor="@android:color/white"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_paciente_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:contentPadding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_vacinas">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_nome_paciente_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="AGATHA KEROLLAINNY DA SILVA BEZERRA" />

            <TextView
                android:id="@+id/text_nascimento_paciente_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                tools:text="Nascimento: 17/02/2023"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/tv_det_idade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark"
                tools:text="1 ano e 9 meses" />
            <TextView
                android:id="@+id/text_endereco_paciente_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                tools:text="End.: FELICIO COELHO DE MEDEIROS 1, 170 SILVANA" />

            <TextView
                android:id="@+id/text_cns_paciente_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                tools:text="CNS: 704.8055.8201.2745" />

            <TextView
                android:id="@+id/text_qtd_vacinas_tomadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                tools:text="Vacinas Aplicadas: 15 doses"
                />

            <TextView
                android:id="@+id/text_qtd_vacinas_agendadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textStyle="italic"
                tools:text="Vacinas Agendadas: 5 doses"
                />
            <TextView
                android:id="@+id/text_email_paciente_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                tools:text="Email: paciente@email.com"
                tools:visibility="gone" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layout_buttons_vacinas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_paciente_header">

        <Button
            android:id="@+id/btn_ate_12_meses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:minHeight="0dp"
            android:paddingVertical="10dp"
            android:text="Até 12m"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_apos_12_meses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="1"
            android:minHeight="0dp"
            android:paddingVertical="10dp"
            android:text="Após 12m"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_outras_vacinas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:minHeight="0dp"
            android:paddingVertical="10dp"
            android:text="Outras"
            android:textSize="12sp" />

    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_vacinas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_buttons_vacinas" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_exportar_pdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Exportar Cartão de Vacinas em PDF"
        android:src="@android:drawable/stat_sys_download"
        app:backgroundTint="#007BFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@android:color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_vacina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Adicionar Nova Vacina"
        android:src="@android:drawable/ic_input_add"
        android:visibility="gone"
        app:backgroundTint="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@android:color/white"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>